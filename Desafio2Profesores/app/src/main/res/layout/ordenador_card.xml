<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <!--items for a single row of RecyclerView-->
        <TextView
            android:id="@+id/txtListaCodord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="codord"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtListaCpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblRam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAM (GB):"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtListaRam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999999999"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/lblAlm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALMACENAMIENTO (GB):"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtListaAlmacenamiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999999999"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/lblAula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aula:"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtListaAula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999999999"
            android:textColor="#000"
            android:textSize="10sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>